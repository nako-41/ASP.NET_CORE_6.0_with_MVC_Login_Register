@using ASP.NET_CORE_6._0_with_MVC_Login_Register.Models.ViewModels;

@model CreateUserModel


    <div class="modal-header">
        <h1 class="modal-title fs-5">Create New Member</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">

        <form id="frmadduser" asp-action="AddNewMember" data-ajax-method="post" data-ajax="true" data-ajax-update="#modaladdcontent">

            <div class="form-group mb-3">
                <label asp-for="Fullname" class="form-label">Full name</label>
                <Input asp-for="Fullname" class="form-control" placeholder="" />
                <span asp-validation-for="Fullname" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <Input asp-for="Username" class="form-control" placeholder="" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <Input asp-for="Password" type="password" class="form-control" placeholder="" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label">RePassword</label>
                <Input asp-for="RePassword" type="password" class="form-control" placeholder="" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select">
                    <option value="">Please Select</option>
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Locked">
                    <label class="form-check-label" asp-for="Locked">
                        Locked
                    </label>
                </div>
            </div>

            <div class="form-group mb-3">
               
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary btn-sm" form="frmadduser"><i class="fa fa-save me-2"></i>Save</button>
    </div>

