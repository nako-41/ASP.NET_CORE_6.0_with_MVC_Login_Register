@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"><i class="fa-solid fa-user me-2 fa-fade"></i></h1>
    </div>
</div>


<div class="row">
    <div class="col-4 offset-4">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <Input asp-for="Username" class="form-control" placeholder="" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <Input asp-for="Password" type="password" class="form-control" placeholder="" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3">
                <button class="btn btn-primary d-block" type="submit"><i class="fa-solid fa-right-to-bracket me-2"></i>Login </button>
            </div>
        </form>
    </div>
</div>











