@using ASP.NET_CORE_6._0_with_MVC_Login_Register.Models.ViewModels;
@model List<UserModel>

@{
    ViewData["Title"] = "Users";
}

<div class="row">
    <div class="col">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>New User</a>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>UserName</th>
                    <th>Locked</th>
                    <th>Role</th>
                    <th>Created at</th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Username</td>
                        <td>
                            @if (item.Locked)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td>@item.Role</td>
                        <td>@item.CreateDate</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>